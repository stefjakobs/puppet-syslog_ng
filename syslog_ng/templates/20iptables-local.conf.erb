## This file is managed by puppet

### send all iptables logs to a central log server

## filter f_iptables is defined in syslog-ng.conf
<% i = 0 -%>
<%- if @dest_server.is_a? Array -%>
  <%- dest_server.each do |serv| -%>
log { source(s_src); filter(f_iptables); destination(<%= "d_logsrv#{i}" -%>); };
  <%- i += 1 -%>
  <%- end -%>
<%- else -%>
log { source(s_src); filter(f_iptables); destination(<%= "d_logsrv#{i}" -%>); };
<%- end -%>

